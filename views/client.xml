<odoo>
    <data>
        
        <!-- list view for client -->
        <record model="ir.ui.view" id="rentalg1c_client_tree">
            <field name="name">client tree</field>
            <field name="model">rentalg1c.client</field>
            <field name="inherit_id" ref="base.view_users_tree"></field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type" string="Client Type"/>
                    <field name="events">
                        <field name="event" string="Event"/>
                        <field name="commercial" string="Commercial"/>
                    </field>
                </tree>
            </field>
        </record>
        
        <!-- client form view -->
        <record model="ir.ui.view" id="rentalg1c_client_form">
            <field name="name">rentalg1c_client_form</field>
            <field name="model">rentalg1c.client</field>
            <field name="inherit_id" ref="base.view_users_form"></field>
            <field name="arch" type="xml">
                <form string="Formulario de Cliente">
                    <field name="type" string="Type"/>
                    <field name="commercial" string="Commercial"/>
                </form>
            </field>
        </record>
        
         <!-- explicit list view definition -->
        <record model="ir.actions.act_window" id="action_list_client">
            <field name="name">client</field>
            <field name="res_model">rentalg1c.client</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- menu -->
        <menuitem name="Client" id="client.menu_list" parent="rentalg1c_menu"
                  action="action_list_client"/>
        
        
    </data>
</odoo>


















